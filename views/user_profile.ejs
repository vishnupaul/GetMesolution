<div style="display: flex; justify-content: space-between">
  <div class="row mt-5">
    <div class="col">
      <div class="card card-body">
        <h1 class="mt-4">Dashboard</h1>
        <p class="lead mb-3">Welcome <%=user.name %></p>
        <p><%= user.email %></p>
        <a href="/users/sign-out" class="btn btn-secondary">Logout</a>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col">
      <div class="card card-body">
        <div id="feed-project">
          <% if(locals.user){%>
          <h2 class="text-center mb-3"><i class="fas fa-file"></i> Project</h2>
          <form action="/projects/create" id="new-project-form" method="POST">
            <fieldset class="mt-2">
              <div class="form-group">
                <label for="mobile" class="form-label mt-2">Mobile No</label>
                <input
                  type="text"
                  class="form-control"
                  id="mobile"
                  name="MobileNumber"
                  placeholder=" Enter Mobile No"
                />
              </div>

              <div class="form-group">
                <label for="subject" class="form-label mt-2">Subject</label>
                <input
                  type="text"
                  class="form-control"
                  id="subject"
                  name="subject"
                  placeholder=" Enter subject"
                />
              </div>
              <div class="form-group">
                <label for="description" class="form-label mt-4"
                  >Projet Descriptiona</label
                >
                <textarea
                  class="form-control"
                  name="description"
                  id="description"
                  rows="3"
                  placeholder="Add description about your project Here...."
                  spellcheck="false"
                ></textarea>
              </div>

              <input type="submit" value="Post" class="btn btn-primary mt-2" />
            </fieldset>
          </form>

          <%}%>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/home_project.js"></script>
